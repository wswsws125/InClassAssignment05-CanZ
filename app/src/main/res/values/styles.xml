<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0C5DE8</item>
        <item name="colorPrimaryDark">#00A1FF</item>
        <item name="colorAccent">#0D26FF</item>
